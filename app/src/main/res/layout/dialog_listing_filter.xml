<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:theme="@style/CardViewTextInputOverlay"
    app:cardBackgroundColor="@color/edge"
    app:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeButton"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/edge"
            android:paddingStart="8dp"
            android:paddingTop="9dp"
            android:paddingEnd="8dp"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="top"
            app:iconSize="22dp"
            app:iconTint="@color/pale_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleView"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="108dp"
            android:layout_marginTop="44dp"
            android:text="@string/filters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/typeDropdownLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="24dp"
            app:endIconDrawable="@drawable/ic_down_arrow"
            app:endIconMode="custom"
            app:endIconTint="@color/pale_text"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            app:placeholderText="Type">

            <com.wde.eventplanner.components.CustomDropDown
                android:id="@+id/typeDropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="11dp"
                android:paddingEnd="0dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/type_dropdown_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="14dp"
            app:endIconDrawable="@drawable/ic_down_arrow"
            app:endIconMode="custom"
            app:endIconTint="@color/pale_text"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/typeDropdownLayout"
            app:placeholderText="Category">

            <com.wde.eventplanner.components.CustomDropDown
                android:id="@+id/categoryDropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:paddingStart="11dp"
                android:paddingEnd="0dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/minPriceLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="7dp"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toStartOf="@id/maxPriceLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_dropdown_layout"
            app:placeholderText="Min. price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:paddingVertical="10dp"
                android:paddingStart="11dp"
                android:paddingEnd="0dp"
                android:saveEnabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/maxPriceLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="36dp"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/minPriceLayout"
            app:layout_constraintTop_toBottomOf="@id/type_dropdown_layout"
            app:placeholderText="Max. price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/maxPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:paddingVertical="10dp"
                android:paddingStart="11dp"
                android:paddingEnd="0dp"
                android:saveEnabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/minRatingLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="7dp"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toStartOf="@id/maxRatingLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/minPriceLayout"
            app:placeholderText="Min. rating">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:paddingVertical="10dp"
                android:paddingStart="11dp"
                android:paddingEnd="0dp"
                android:saveEnabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/maxRatingLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="36dp"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/minRatingLayout"
            app:layout_constraintTop_toBottomOf="@id/minPriceLayout"
            app:placeholderText="Max. rating">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/maxRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:paddingVertical="10dp"
                android:paddingStart="11dp"
                android:paddingEnd="0dp"
                android:saveEnabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterButton"
            android:layout_width="132dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="36dp"
            android:text="@string/filter_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/minRatingLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>