<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toStartOf="@id/guestListInviteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderText="@string/email_">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/guestListEmailInput"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:imeOptions="actionSend"
            android:inputType="textEmailAddress"
            android:paddingVertical="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/guestListInviteButton"
        style="@style/CustomAccentButtonStyle"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:text="@string/invite"
        app:layout_constraintBottom_toBottomOf="@id/emailLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/emailLayout"
        app:layout_constraintTop_toTopOf="@id/emailLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/guestListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/card"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/emailLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/guestList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pdfButton"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="@string/pdf"
        app:icon="@drawable/ic_document"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="20dp"
        app:iconTint="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guestListLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdfButton" />

</androidx.constraintlayout.widget.ConstraintLayout>