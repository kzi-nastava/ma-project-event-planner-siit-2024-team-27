        <item name="windowSplashScreenAnimatedIcon">@drawable/wde_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.EventPlanner</item>
